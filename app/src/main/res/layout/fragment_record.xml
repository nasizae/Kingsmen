                        android:text="Стрижка 990 с. с понедельника по четверг с 12:00 до 15:00 по промокоду “Happy22”"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/price_happy"
                        app:layout_constraintTop_toBottomOf="@id/price_happy" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/container_father_and_son"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
